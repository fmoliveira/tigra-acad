@if (HttpContext.Current.User.Identity.IsAuthenticated) {
	<ul class="nav navbar-nav navbar-right">
		<li class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown"><b class="glyphicon glyphicon-cog"></b> &nbsp; Administração <b class="caret"></b></a>
			<ul class="dropdown-menu">
				<li><a href="#">Células</a></li>
